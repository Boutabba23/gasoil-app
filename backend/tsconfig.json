{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true, // Utile pour le d√©bogage
    "baseUrl": "./", // Permet les chemins relatifs depuis la racine (ex: 'src/models/User')
    "paths": {
      "@/*": ["src/*"] // Exemple d'alias de chemin si besoin
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
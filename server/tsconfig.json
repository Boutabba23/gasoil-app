{
  "compilerOptions": {
    "module": "CommonJS", // This is a common setting for Node.js projects
    "esModuleInterop": true, // **CRUCIAL FOR THE DEFAULT IMPORT TO WORK SMOOTHLY**
    "allowSyntheticDefaultImports": true, // Often good to have with esModuleInterop
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./src", // Example: if you use this for cleaner paths
    "paths": {
      // Example: if you use this
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // If you had "typeRoots", ensure it's correct or consider removing it to let TS auto-discover
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*" // This makes sure all .ts files in src are compiled
  ],
  "exclude": ["node_modules", "dist"]
}
